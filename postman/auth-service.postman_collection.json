{
	"info": {
		"_postman_id": "a0a1a2a3-b4b5-c6c7-d8d9-e0e1e2e3e4e5",
		"name": "Auth Service",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Signup",
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "{{auth_service_url}}/v1/auth/register",
					"host": [
						"{{auth_service_url}}"
					],
					"path": [
						"v1",
						"auth",
						"register"
					]
				}
			},
			"response": [],
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"if (jsonData.id) {",
							"    pm.environment.set(\"user_id\", jsonData.id);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"name": "Login",
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "{{auth_service_url}}/v1/auth/login",
					"host": [
						"{{auth_service_url}}"
					],
					"path": [
						"v1",
						"auth",
						"login"
					]
				}
			},
			"response": [],
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"if (jsonData.accessToken) {",
							"    pm.environment.set(\"access_token\", jsonData.accessToken);",
							"}",
							"if (jsonData.refreshToken) {",
							"    pm.environment.set(\"refresh_token\", jsonData.refreshToken);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"name": "Refresh Token",
			"request": {
				"method": "POST",
				"header": [],
